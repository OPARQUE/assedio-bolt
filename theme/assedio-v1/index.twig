{% include 'partials/_header.twig' %}
{% include 'partials/_main_sidebar.twig' %}

{% setcontent config = 'config-assedio/1' %}
<div class="col-sm-7 col-xs-12 central-home">
    <div class="row">

        {% include 'partials/_slider_home.twig' %}

        {% setcontent noticias_noticia = 'noticias/latest/2' where { categorias: 'noticias' } %}
        {% for item in noticias_noticia %}
            <div class="col-md-6 col-xs-12 card-noticia">
                <div class="row">
                    <div class="col-xs-12 height1 card-imagem" style="background-image: url(files/{{item.imagem_destaque}})">
                        <div class="overlay-card"></div>
                        <div class="card-data">
                            <span>{{ item.datepublish|date("d")}}</span>
                            <span class="text-uppercase">{{ item.datepublish|date("M")}}</span>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 col-md-6 card-titulo">
                                <h5 class="cor1 text-uppercase">
                                    {% for categoria in item.taxonomy.categorias %}
                                        {{categoria}}
                                    {% endfor %}
                                </h5>
                                <h3 class="cor4 text-uppercase">
                                    <a href="{{item.link}}">{{item.titulo_destaque}}</a>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        {% setcontent noticias_especial = 'noticias/latest/2' where { categorias: 'noticias especiais' } %}
        {% for item in noticias_especial %}
            <div class="col-md-6 col-xs-12 card-noticia">
                <div class="row">
                    <div class="col-xs-12 height1 card-imagem" style="background-image: url(files/{{item.imagem_destaque}})">
                        <div class="overlay-card"></div>
                        <div class="card-data pull-right">
                            <span>{{ item.datepublish|date("d")}}</span>
                            <span class="text-uppercase">{{ item.datepublish|date("M")}}</span>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 col-md-6 card-titulo-especial">
                                <h5 class="cor1 text-uppercase">
                                    {% for categoria in item.taxonomy.categorias %}
                                        {{categoria}}
                                    {% endfor %}
                                </h5>
                                <h3 class="cor4 text-uppercase">
                                    <a href="{{item.link}}">{{item.titulo_destaque}}</a>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<div class="col-sm-3 col-xs-12 direita-home">
    <div class="row slider-itens-biblioteca">
        {% setcontent biblioteca = 'itens_biblioteca/latest/4' %}
        {% for item in biblioteca %}
            <div class="col-xs-12 bloco-biblioteca link-preto">
                <h5>BIBLIOTECA</h5>
                <span class="fa fa-4x {{item.icone}}"></span>
                <h2>
                    <a href="{{item.link}}">
                        {{item.resumo|excerpt(60)}}
                    </a>
                </h2>
            </div>
        {% endfor %}
    </div>
    <div class="row">
        <div class="col-xs-12 bloco-agenda">
            {% include 'partials/_agenda.twig' %}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 bloco-parceiros">
            <h5>PARCEIROS DO <img src="{{paths.theme}}assets/img/icone-logo-preto.png" width="20" style="margin-top: -5px;margin-left: 5px;" /></h5>
            {% setcontent parceiros = 'parceiros/random/1' %}
            {% for item in parceiros %}
                {{item.corpo}}
            {% endfor %}
        </div>
    </div>
</div>
<div class="col-md-10 col-xs-12 rodape-home">
    <div class="row">
        <div class="col-md-5 col-sm-6 col-xs-8">
            <div class="row">
                <div class="col-xs-4">
                    <img src="{{image(config.logo_assedio_rodape)}}" class="img-responsive pull-right"/>
                </div>
                <div class="col-xs-8">
                    <p>{{config.desc_rodape}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 col-xs-4 hashtags-rodape link-preto">
            {{config.hashtags|raw}}
        </div>
        <div class="col-md-5 col-xs-12">
            <a href="/pagina/projetos">
                <img src="{{image(config.logo_rodape)}}" class="img-responsive"/>
            </a>
        </div>
    </div>
    <div class="row padding-top-1">
        <div class="col-xs-12">
            <a href="http://www.oparque.art.br" target="_blank" class="pull-right">
                <img src="{{paths.theme}}assets/img/creditos-oparque.png" />
            </a>
        </div>
    </div>
</div>
{% include 'partials/_footer.twig' %}