{% include 'partials/_header.twig' %}
{% include 'partials/_main_sidebar.twig' %}

{% setcontent config = 'config-assedio/1' %}
<div class="col-sm-10 col-xs-12">
    <div class="row">
        <div class="col-sm-2" style="z-index: 2;">
            <div class="row sobre-projetos bg4 padding-top-1 padding-bottom-2 link-preto-2">
                <div class="col-xs-12">
                    {{record.corpo}}
                    <hr>
                    <a class="visible-xs" data-toggle="collapse" href="#menu-secundario-projetos" aria-expanded="false" aria-controls="menu-principal">
                        <span class="fa fa-bars fa-2x"></span> <span class="fa-2x">OUTROS PROJETOS</span>
                    </a>
                    <ul class="menu-secundario-projetos navbar-collapse collapse" id="menu-secundario-projetos">
                        {% setcontent projetos = 'projetos' %}
                        {% for item in projetos%}
                            <li>
                                <a href="{{item.link}}"><span class="fa fa-angle-right"></span> {{item.titulo|upper}}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="slider-projetos link-neutro">
            {% for item in projetos %}
                <a href="{{item.link}}" class="col-sm-2 padding-top-1 padding-bottom-2 card-projeto cor4" style="background-image: url({{image(item.imagem_destaque)}});">
                    <div class="overlay-projetos visible-xs"></div>
                    <div class="logo-card-projeto">
                        {% if item.logo != '' %}
                            <img src="{{image(item.logo)}}" class="img-responsive" />
                        {% endif %}
                    </div>
                    <h2 style="color:{{item.cor_titulo}}">{{item.titulo|upper}}</h2>
                </a>
            {% endfor %}
        </div>
    </div>
</div>
{% include 'partials/_footer.twig' %}