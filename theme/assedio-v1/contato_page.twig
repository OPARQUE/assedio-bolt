{% include 'partials/_header.twig' %}
{% include 'partials/_main_sidebar.twig' %}

{% setcontent config = 'config-assedio/1' %}
<div class="col-sm-10 col-xs-12 central-home">
    <div class="row">
        <div class="col-md-6 col-xs-12" id="mapa-galpao">
        </div>
        <div class="col-md-4 col-xs-12 padding-bottom-1 link-preto-2">
            <h2>FALE COM A GENTE</h2>
            <h3>{{config.email}}<br>
                <a href="tel:{{config.telefone}}">{{config.telefone}}</a><br><br>
                {{config.corpo}}
            </h3>
            {{ simpleform('contato') }}
            <div class="form-group">
                <input type="text" class="form-control input-lg" placeholder="Nome">
            </div>
            <div class="form-group">
                <input type="email" class="form-control input-lg" placeholder="E-mail">
            </div>
            <div class="form-group">
                <textarea class="form-control input-lg" rows="8" placeholder="Mensagem"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-default">Enviar</button>
            </div>
            <hr>
            <a href="{{config.facebook}}"><span class="fa fa-2x fa-facebook"></span></a>&nbsp;&nbsp;&nbsp;
            <a href="{{config.youtube}}"><span class="fa fa-2x fa-youtube"></span></a>&nbsp;&nbsp;&nbsp;
            <a href="{{config.instagram}}"><span class="fa fa-2x fa-instagram"></span></a>&nbsp;&nbsp;&nbsp;
            <a href="{{config.twitter}}"><span class="fa fa-2x fa-twitter"></span></a>
        </div>
        <div class="col-md-2 col-xs-12 about-contato-direita">
            <img src="{{image(record.imagem_destaque)}}" />
            {{record.corpo}}
        </div>
    </div>
</div>
{% include 'partials/_footer.twig' %}
